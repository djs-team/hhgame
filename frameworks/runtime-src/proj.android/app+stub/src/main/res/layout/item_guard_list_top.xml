<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_rank_one_head"
            android:layout_width="57dp"
            android:layout_height="57dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
        />
        <TextView
            android:id="@+id/tv_rank_one_name"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/iv_rank_one_head"
            app:layout_constraintLeft_toLeftOf="@id/iv_rank_one_head"
            app:layout_constraintRight_toRightOf="@id/iv_rank_one_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff333333"
            android:textSize="19sp"
            />
        <TextView
            android:layout_marginTop="2dp"
            android:id="@+id/tv_rank_one_intimacy"
            app:layout_constraintTop_toBottomOf="@id/tv_rank_one_name"
            app:layout_constraintLeft_toLeftOf="@id/iv_rank_one_head"
            app:layout_constraintRight_toRightOf="@id/iv_rank_one_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff803ff0"
            android:textSize="11sp"
            />
        <ImageView
            android:layout_marginTop="49dp"
            android:layout_marginLeft="40dp"
            android:id="@+id/iv_rank_two_head"
            android:layout_width="57dp"
            android:layout_height="57dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/tv_rank_two_name"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/iv_rank_two_head"
            app:layout_constraintLeft_toLeftOf="@id/iv_rank_two_head"
            app:layout_constraintRight_toRightOf="@id/iv_rank_two_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff333333"
            android:textSize="19sp"
            />
        <TextView
            android:layout_marginTop="2dp"
            android:id="@+id/tv_rank_two_intimacy"
            app:layout_constraintTop_toBottomOf="@id/tv_rank_two_name"
            app:layout_constraintLeft_toLeftOf="@id/iv_rank_two_head"
            app:layout_constraintRight_toRightOf="@id/iv_rank_two_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff803ff0"
            android:textSize="11sp"
            />
        <ImageView
            android:layout_marginTop="49dp"
            android:layout_marginRight="40dp"
            android:id="@+id/iv_rank_three_head"
            android:layout_width="57dp"
            android:layout_height="57dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/tv_rank_three_name"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/iv_rank_three_head"
            app:layout_constraintLeft_toLeftOf="@id/iv_rank_three_head"
            app:layout_constraintRight_toRightOf="@id/iv_rank_three_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff333333"
            android:textSize="19sp"
            />
        <TextView
            android:layout_marginTop="2dp"
            android:id="@+id/tv_rank_three_intimacy"
            app:layout_constraintTop_toBottomOf="@id/tv_rank_three_name"
            app:layout_constraintLeft_toLeftOf="@id/iv_rank_three_head"
            app:layout_constraintRight_toRightOf="@id/iv_rank_three_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff803ff0"
            android:textSize="11sp"
            />
    </android.support.constraint.ConstraintLayout>
</layout>