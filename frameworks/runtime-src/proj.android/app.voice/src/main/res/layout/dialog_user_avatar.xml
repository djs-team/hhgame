<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="dlg"
            type="com.deepsea.mua.voice.dialog.UserAvatarDialog" />

        <variable
            name="isMine"
            type="boolean" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_corner_bg">

        <ImageView
            android:id="@+id/avatar_iv"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:layout_marginTop="19dp"
            android:onClick="@{dlg::onClick}"
            android:src="@drawable/ic_place"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nick_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:singleLine="true"
            android:text="昵称"
            android:textColor="#ff333333"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/avatar_iv"
            app:layout_constraintRight_toRightOf="@id/avatar_iv"
            app:layout_constraintTop_toBottomOf="@id/avatar_iv" />


        <TextView
            android:id="@+id/invite_free_tv"
            android:layout_width="69dp"
            android:layout_height="36dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/bg_pink_radius_21"
            android:gravity="center"
            android:onClick="@{dlg::onClick}"
            android:text="免费邀请\n上麦"
            android:textColor="#ffffffff"
            android:textSize="12sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/invite_nofree_tv"
            android:layout_width="69dp"
            android:layout_height="36dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/bg_violet_radius_21"
            android:gravity="center"
            android:onClick="@{dlg::onClick}"
            android:text="收费邀请\n上麦"
            android:textColor="#ffffffff"
            android:textSize="12sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/invite_free_tv" />

        <TextView
            android:id="@+id/tv_guard_list"
            android:layout_width="69dp"
            android:layout_height="27dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="15dp"

            android:background="@drawable/bg_yellow_radius_21"
            android:gravity="center"
            android:onClick="@{dlg::onClick}"
            android:text="守护榜"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/invite_nofree_tv" />

        <LinearLayout
            android:id="@+id/ll_user_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="@id/avatar_iv"
            app:layout_constraintRight_toRightOf="@id/avatar_iv"
            app:layout_constraintTop_toBottomOf="@id/nick_tv">

            <RelativeLayout
                android:id="@+id/rl_sex"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="9dp"
                android:background="@drawable/bg_sex_man"
                app:layout_constraintBottom_toBottomOf="@id/tv_name"
                app:layout_constraintLeft_toRightOf="@id/tv_name"
                app:layout_constraintTop_toTopOf="@id/tv_name">

                <ImageView
                    android:id="@+id/sex_iv"
                    android:layout_width="9dp"
                    android:layout_height="9dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icon_find_sex_man" />
            </RelativeLayout>

            <TextView
                android:id="@+id/profile_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="8dp"
                android:text="25岁  身高 "
                android:textColor="#ff818181"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_location"
                android:layout_width="10dp"
                android:layout_height="12dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_location"
                app:layout_constraintLeft_toRightOf="@id/iv_photo"
                app:layout_constraintTop_toBottomOf="@id/tv_name" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="河北省石家庄"
                android:textColor="#ff4a4a4a"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/level_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_level_bg"
                android:gravity="center"
                android:text="10sp"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/addfriend_tv"
            android:layout_width="207dp"
            android:layout_height="36dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_wallet_operate_purple"
            android:gravity="center"
            android:onClick="@{dlg::onClick}"
            android:text="送礼物加好友"
            android:textColor="#ff878787"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_user_info" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="43dp"
            android:background="#BBBBBB"
            app:layout_constraintBottom_toBottomOf="parent" />

        <LinearLayout
            android:layout_marginTop="80dp"
            android:id="@+id/ll_bottom_operate"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:orientation="horizontal"
           app:layout_constraintTop_toBottomOf="@id/ll_user_info">

            <TextView
                android:id="@+id/tv_aite"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="\@TA"
                android:textColor="#ff773be7"
                android:textSize="18sp"
                android:textStyle="bold"
                android:onClick="@{dlg::onClick}"
                />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#BBBBBB" />

            <TextView
                android:id="@+id/handsel_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="@{dlg::onClick}"
                android:text="送TA礼物"
                android:textColor="#878787"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingLeft="13dp"
            android:paddingTop="5dp"
            android:paddingRight="13dp"
            android:paddingBottom="5dp"
            android:text="更多"
            android:textColor="#ff686868"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_more">

            <TextView
                android:id="@+id/forbidden_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{dlg::onClick}"
                android:paddingLeft="13dp"
                android:paddingTop="5dp"
                android:paddingRight="13dp"
                android:paddingBottom="5dp"
                android:text="禁言"
                android:textStyle="bold"
                android:textColor="#ff686868"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/close_mp_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{dlg::onClick}"
                android:paddingLeft="13dp"
                android:paddingTop="5dp"
                android:paddingRight="13dp"
                android:paddingBottom="5dp"
                android:text="闭麦"
                android:textStyle="bold"
                android:textColor="#ff686868"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/block_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{dlg::onClick}"
                android:paddingLeft="13dp"
                android:paddingTop="5dp"
                android:paddingRight="13dp"
                android:paddingBottom="5dp"
                android:text="拉黑"
                android:textStyle="bold"
                android:textColor="#ff686868"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
            android:id="@+id/remove_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{dlg::onClick}"
                android:paddingLeft="13dp"
                android:paddingTop="5dp"
                android:paddingRight="13dp"
                android:paddingBottom="5dp"
                android:text="移除房间"
                android:textStyle="bold"
                android:textColor="#ff686868"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" /><TextView
                android:id="@+id/report_user_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{dlg::onClick}"
                android:paddingLeft="13dp"
                android:paddingTop="5dp"
                android:paddingRight="13dp"
                android:paddingBottom="5dp"
                android:text="举报用户"
                android:textStyle="bold"
                android:textColor="#ff686868"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>

