<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
 >

    <data>

    </data>
    <!--android:background="@drawable/dialog_changewx_corner_bg"-->
    <RelativeLayout
        android:layout_width="279dp"
        android:layout_height="180dp"
        android:background="@drawable/dialog_changewx_corner_bg">

        <TextView
            android:id="@+id/tv_changewx_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38dp"
            android:text="请输入您微信ID，完成微信交换"
            android:textColor="#333333"
            android:textSize="@dimen/adaptive_14sp" />

        <EditText
            android:id="@+id/et_wx_no"
            android:layout_width="258dp"
            android:layout_height="44dp"
            android:layout_below="@id/tv_changewx_desc"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:background="@drawable/dialog_changewx_edittext_bg"
            android:hint="微信号xxxxx"
            android:paddingLeft="11dp"
            android:textSize="18sp"
            android:maxLength="20"
            android:digits="0123456789qwertyuioplkjhgfdsazxcvbnm"/>

        <Button
            android:layout_marginTop="13dp"
            android:layout_below="@id/et_wx_no"
            android:id="@+id/btn_submit"
            android:layout_width="200dp"
            android:layout_height="44dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:background="@drawable/dialog_changewx_submit_bg"
            android:text="提交"
            android:textColor="#333333"
            android:textSize="16sp" />
    </RelativeLayout>
</layout>