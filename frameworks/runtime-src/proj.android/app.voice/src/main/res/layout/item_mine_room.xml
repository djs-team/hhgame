<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <View
            android:id="@+id/top_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/primary_bg" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="90dp">

            <ImageView
                android:id="@+id/avatar_iv"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_place"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/live_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_room_live"
                app:layout_constraintBottom_toBottomOf="@id/avatar_iv"
                app:layout_constraintLeft_toLeftOf="@id/avatar_iv"
                app:layout_constraintRight_toRightOf="@id/avatar_iv"
                app:layout_constraintTop_toTopOf="@id/avatar_iv" />

            <ImageView
                android:id="@+id/lock_iv"
                android:layout_width="15dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_room_lock"
                app:layout_constraintBottom_toBottomOf="@id/avatar_iv"
                app:layout_constraintLeft_toLeftOf="@id/avatar_iv"
                app:layout_constraintRight_toRightOf="@id/avatar_iv"
                app:layout_constraintTop_toTopOf="@id/avatar_iv" />

            <TextView
                android:id="@+id/nick_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="12dp"
                android:text="情深深雨蒙蒙萌"
                android:textColor="#ff282828"
                android:textSize="16sp"
                app:layout_constraintLeft_toRightOf="@id/avatar_iv"
                app:layout_constraintTop_toTopOf="@id/avatar_iv" />

            <TextView
                android:id="@+id/uid_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="10dp"
                android:text="ID：1877653"
                android:textColor="#ff282828"
                android:textSize="11sp"
                app:layout_constraintTop_toBottomOf="@id/nick_tv"
                app:layout_constraintLeft_toRightOf="@id/avatar_iv" />

            <TextView
                android:id="@+id/room_tag_tv"
                android:layout_width="40dp"
                android:layout_height="15dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/ic_room_tag"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@id/nick_tv"
                app:layout_constraintLeft_toRightOf="@id/nick_tv"
                app:layout_constraintTop_toTopOf="@id/nick_tv" />

            <TextView
                android:id="@+id/renqi_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:text="20人"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="13dp"
                android:src="@drawable/ic_arrow_r_black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <View
            android:id="@+id/bottom_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/primary_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/avatar_iv" />
    </LinearLayout>
</layout>