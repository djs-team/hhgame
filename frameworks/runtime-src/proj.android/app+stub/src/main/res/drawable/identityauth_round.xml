        <shape android:shape="rectangle">
            <solid android:color="#EEEEEE"/>
            <corners android:radius="10dp" />
        </shape>
    </item>

    <item
        android:left="1dp"
        android:right="1dp"
        android:top="0dp"
        android:bottom="1dp">
