<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:id="@+id/rl_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_gift_photo"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp" />

        <TextView
            android:id="@+id/tv_gift_name"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@id/iv_gift_photo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="99朵玫瑰"
            android:textColor="#fff8705f"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_gift_price"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_gift_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="8dp"
            android:text="99"
            android:textColor="#ffaaaaaa"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_gift_number"
            android:layout_width="30dp"
            android:layout_height="15dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="11dp"
            android:layout_marginRight="4dp"
            android:textColor="#fff8705f"
            android:textSize="8sp"
            android:gravity="center"
            android:background="@drawable/bg_gift_number" />
    </RelativeLayout>
</layout>