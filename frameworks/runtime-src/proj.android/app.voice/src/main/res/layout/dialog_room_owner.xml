<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_corner_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/owner_iv"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/owner_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/owner_iv"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@id/owner_iv"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/owner_id_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/owner_name_tv"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@id/owner_iv"
                android:textColor="@color/gray"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="4dp"
            android:weightSum="4">

            <TextView
                android:id="@+id/lock_room_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_lock_room"
                android:drawablePadding="4dp"
                android:gravity="center_horizontal"
                android:paddingTop="15dp"
                android:paddingBottom="11dp"
                android:text="锁定房间"
                android:textColor="@color/gray"
                android:textSize="10sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/room_set_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_room_set"
                android:drawablePadding="4dp"
                android:gravity="center_horizontal"
                android:paddingTop="15dp"
                android:paddingBottom="11dp"
                android:text="房间设置"
                android:textColor="@color/gray"
                android:textSize="10sp" />


        </LinearLayout>
    </LinearLayout>
</layout>