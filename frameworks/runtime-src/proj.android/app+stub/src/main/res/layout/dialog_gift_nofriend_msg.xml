<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="14dp"
        android:paddingBottom="19dp"
        app:bl_corners_radius="12dp"
        app:bl_solid_color="@color/white">


        <EditText
            android:id="@+id/et_gift_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="19dp"
            android:layout_marginRight="9dp"
            android:background="@drawable/dialog_changewx_edittext_bg"
            android:gravity="center_vertical"
            android:hint="点击输入礼物寄语"
            android:maxLength="15"
            android:minHeight="50dp"
            android:paddingLeft="15dp"
            android:textColor="#ff666666"
            android:textSize="18sp" />


        <Button
            android:id="@+id/btn_add_friend"
            android:layout_width="200dp"
            android:layout_height="44dp"
            android:layout_below="@id/et_gift_message"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/dialog_changewx_submit_bg"
            android:text="不送礼物加好友"
            android:textColor="#ff333333"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>
</layout>