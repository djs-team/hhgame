<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/icon_invite_alert_bg"
        android:orientation="vertical">

        <com.deepsea.mua.stub.view.TitleBar
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backgroundRes="@color/transparent"
            app:title="邀请提示" />


        <FrameLayout
            android:id="@+id/fl_head"
            android:layout_width="205dp"
            android:layout_height="205dp"
            android:layout_below="@id/tv_title"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="105dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/icon_invite_alert_head_bg" />

            <ImageView
                android:id="@+id/iv_belong_header"
                android:layout_width="173dp"
                android:layout_height="173dp"
                android:layout_gravity="center"
               />

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="right|bottom"
             />
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/rl_belong_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fl_head"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">

            <TextView

                android:id="@+id/tv_blong_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <ImageView
                android:layout_marginTop="4dp"
                android:id="@+id/iv_belong_sex"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/tv_blong_name"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_blong_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_belong_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_blong_info"
            android:layout_marginTop="54dp"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/close_btn"
            android:layout_width="214dp"
            android:layout_height="43dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="54dp"
            android:layout_marginBottom="93dp"
            android:background="@drawable/selector_login_btn_bg"
            android:text="关闭窗口"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </RelativeLayout>
</layout>