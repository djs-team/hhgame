<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="false">
        <shape>
            <solid android:color="#ffcccccc" />
            <corners android:topLeftRadius="5dp" android:topRightRadius="5dp" android:bottomLeftRadius="1dp" android:bottomRightRadius="1dp" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <solid android:color="#ffffffff" />
            <corners android:bottomLeftRadius="1dp" android:bottomRightRadius="1dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />
        </shape>
    </item>
</selector>
