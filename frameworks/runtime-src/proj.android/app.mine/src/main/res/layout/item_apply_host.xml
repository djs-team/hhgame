<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="4dp"
            android:id="@+id/tv_index"
            android:layout_width="5dp"
            android:layout_height="4dp"
            android:layout_marginLeft="24dp"
            android:background="#ff1f1379"
            android:text="·"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/tv_index"
            android:text="累计连麦时长≥10小时"
            android:textColor="#ff1f1379"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_task_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_task_title"
            android:layout_marginLeft="46dp"
            android:layout_marginTop="4dp"
            android:text="已完成连麦时长：5小时"
            android:textColor="#ff404040"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_operate"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="2dp"
            android:layout_marginRight="26dp"
            android:background="@drawable/selector_apply_host_item_ok"
            android:gravity="center"
            android:text="去连麦"
            android:textColor="#ffffffff"
            android:textSize="13sp"
            android:enabled="true"/>
    </RelativeLayout>
</layout>