<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:background="@drawable/dialog_corner_white_bg">

        <TextView
            android:id="@+id/tv_invite_title"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:gravity="center"
            android:text="主持邀请您上麦，是否同意"
            android:textColor="#ff333333"
            android:textSize="16sp" />

        <View
            android:layout_below="@id/tv_invite_title"
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffd8d8d8" />
        <LinearLayout
            android:layout_below="@id/line"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_invite_disagree"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#ff666666"
                android:textSize="15sp"
                android:gravity="center"
                android:text="拒绝" />
            <TextView
                android:id="@+id/tv_invite_agree"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#ffff859e"
                android:textSize="15sp"
                android:gravity="center"
                android:text="同意" />
        </LinearLayout>
    </RelativeLayout>
</layout>