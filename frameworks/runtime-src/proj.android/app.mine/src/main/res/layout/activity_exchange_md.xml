<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <com.deepsea.mua.stub.view.TitleBar
            android:id="@+id/cons_titlebar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backgroundRes="@color/white"
            app:title="兑换"
            app:rightText="兑换记录"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:background="#EEEEEE" />

        <RelativeLayout
            android:id="@+id/diamond_layout"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="13dp"
            android:layout_marginRight="14dp"
            android:background="@drawable/bg_friend_agree">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="12dp"
                android:text="余额"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <com.deepsea.mua.stub.view.AutoResizeTextView
                android:id="@+id/diamond_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="34sp"
                android:text="420.00"
                android:textStyle="bold"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="17dp"
            android:layout_marginRight="14dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:bl_corners_radius="20dp"
            app:bl_solid_color="#fffafafa"
            android:background="@drawable/bg_et_exchage_md">

            <EditText

                android:id="@+id/md_edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="19dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="¥输入兑换金额"
                android:inputType="number"
                android:longClickable="false"
                android:maxLength="10"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="#ff333333"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="17dp"
            android:layout_marginRight="14dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/bg_et_exchage_md">

            <TextView
                android:id="@+id/coin_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:textColor="#ff333333"
                android:textSize="18sp"
                android:hint="玫瑰"
                android:textColorHint="#ff333333" />

        </LinearLayout>

        <TextView
            android:id="@+id/scale_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="19dp"
            android:textColor="@color/gray"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/commit_tv"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="34dp"
            android:background="@drawable/bg_friend_agree"
            android:gravity="center"
            android:text="立即兑换"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>
</layout>