<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_radius_8">

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/ic_place"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <com.deepsea.mua.stub.view.WithBackgroundTextView
            app:layout_constraintLeft_toLeftOf="@id/iv_photo"
            app:layout_constraintRight_toRightOf="@id/iv_photo"
            app:layout_constraintBottom_toBottomOf="@id/iv_photo"
            android:id="@+id/tv_state"
            android:layout_width="38dp"
            android:layout_height="15dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="热聊中"
            android:textColor="@color/white"
            android:textSize="9sp"
            app:radius="8dp"
            app:withBackgroundColor="#EF51B2"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="12dp"
            android:text="小包子"
            android:textColor="#ff333333"
            android:textSize="19sp"
            app:layout_constraintLeft_toRightOf="@id/iv_photo"
            app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
            android:id="@+id/rl_sex"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="9dp"
            android:background="@drawable/bg_sex_man"
            app:layout_constraintBottom_toBottomOf="@id/tv_name"
            app:layout_constraintLeft_toRightOf="@id/tv_name"
            app:layout_constraintTop_toTopOf="@id/tv_name">

            <ImageView
                android:id="@+id/sex_iv"
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_find_sex_man" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="35"
            android:textColor="#ff818181"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/tv_name"
            app:layout_constraintLeft_toRightOf="@id/rl_sex"
            app:layout_constraintTop_toTopOf="@id/tv_name" />

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:text="ID:1888888"
            android:textColor="#ff333333"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_name"
            app:layout_constraintLeft_toRightOf="@id/tv_age"
            app:layout_constraintTop_toTopOf="@id/tv_name" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:text="7月18日"
            android:textColor="#ff818181"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_name" />

        <ImageView
            android:id="@+id/iv_location"
            android:layout_width="10dp"
            android:layout_height="12dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/ic_location"
            app:layout_constraintLeft_toRightOf="@id/iv_photo"
            app:layout_constraintTop_toBottomOf="@id/tv_name" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="11dp"
            android:text="河北省石家庄"
            android:textColor="#ff4a4a4a"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@id/iv_location"
            app:layout_constraintTop_toBottomOf="@id/tv_name" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:text="我是天上的星星"
            android:textColor="#ff4a4a4a"
            android:textSize="12sp"
            android:visibility="visible"
            app:layout_constraintLeft_toRightOf="@id/iv_photo"
            app:layout_constraintTop_toBottomOf="@id/tv_location" />

        <TextView
            android:id="@+id/tv_apply_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="请求和你成为好友"
            android:textColor="#ff282828"
            android:textSize="13sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_desc" />

        <View
            android:id="@+id/view_line"
            android:layout_width="101dp"
            android:layout_height="1dp"
            android:layout_marginTop="3dp"
            android:background="#282828"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_apply_desc" />

        <LinearLayout
            android:layout_marginTop="12dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="18dp"
            app:layout_constraintTop_toBottomOf="@id/view_line">
            <com.deepsea.mua.stub.view.WithBackgroundTextView
                android:id="@+id/tv_overdue"
                android:layout_width="108dp"
                android:layout_height="22dp"
                app:radius="20dp"
                android:textColor="#ff282828"
                android:textSize="12sp"
                android:text="已过期"
                android:gravity="center"
                app:withBackgroundColor="#BABABA"
                android:visibility="gone"/>
            <TextView
                android:visibility="visible"
                android:id="@+id/tv_disagree"
                android:layout_width="75dp"
                android:layout_height="23dp"
                android:background="@drawable/bg_friend_disagree"
                android:gravity="center"
                android:text="拒绝"
                android:textColor="#ff878787"
                android:textSize="12sp" />
            <TextView
                android:visibility="visible"
                android:layout_marginLeft="25dp"
                android:id="@+id/tv_agree"
                android:layout_width="75dp"
                android:layout_height="23dp"
                android:background="@drawable/bg_friend_agree"
                android:gravity="center"
                android:text="同意"
                android:textColor="#ffffffff"
                android:textSize="12sp" />

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>
</layout>