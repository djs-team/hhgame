<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:id="@+id/rl_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/white_radius_12dp"
            android:orientation="vertical">


            <android.support.constraint.ConstraintLayout
                android:id="@+id/md_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:text="购买钻石"
                    android:textColor="#ff333333"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <com.deepsea.mua.stub.view.WithBackgroundTextView
                    android:id="@+id/balance_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:layout_marginRight="22dp"
                    android:includeFontPadding="false"
                    android:text="666"
                    android:textColor="#ff818181"
                    android:textSize="14sp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_rose_logo"
                    android:layout_width="13dp"
                    android:layout_height="14dp"
                    android:layout_marginTop="19dp"
                    android:layout_marginRight="6dp"
                    android:src="@drawable/icon_flower_recharge"
                    app:layout_constraintRight_toLeftOf="@id/balance_tv"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/md_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:layout_marginRight="7dp"
                    android:text="余额："
                    android:textColor="#ff818181"
                    android:textSize="14sp"
                    app:layout_constraintRight_toLeftOf="@id/iv_rose_logo"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_first_welfare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="18dp"
                    android:src="@drawable/icon_first_welfare"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/md_title" />

                <com.deepsea.mua.stub.view.WithBackgroundTextView
                    android:id="@+id/tv_recharge_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="2dp"
                    android:text="注：首次充值任意金额赠送一张上麦卡."
                    android:textColor="#fff7d2f8"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@id/iv_first_welfare"
                    app:layout_constraintLeft_toRightOf="@id/iv_first_welfare" />
            </android.support.constraint.ConstraintLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/md_layout"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="14dp"
                android:overScrollMode="never" />

            <TextView
                android:id="@+id/tv_paytype_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/recycler_view"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="12dp"
                android:text="支付方式："
                android:textColor="#ff333333"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/ll_pay_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_paytype_title"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/iv_pay_wx"
                    android:layout_width="94dp"
                    android:layout_height="33dp"
                    android:background="@drawable/selector_charge"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="18.5dp"
                        android:layout_height="18.5dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/icon_renew_wx" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:text="微信"
                        android:textColor="#ff333333"
                        android:textSize="12sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/iv_pay_alipay"
                    android:layout_width="94dp"
                    android:layout_height="33dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/selector_charge"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="18.5dp"
                        android:layout_height="18.5dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/icon_renew_alipay" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:text="支付宝"
                        android:textColor="#ff333333"
                        android:textSize="12sp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/recharge_tv"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="34dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="34dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:text="确认充值"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:bl_corners_radius="24dp"
                    app:bl_solid_color="#fa1163" />

                <TextView
                    android:id="@+id/tv_recharge_agreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="4dp"
                    android:text="充值即代表同意《麻将情缘充值协议》"
                    android:textColor="#333333"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:text="未成年人请在监护人的陪同或者许可下操作"
                    android:textColor="#ff818181"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>