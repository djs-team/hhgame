<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_corner_bg"
        android:minHeight="160dp">

        <ImageView
            android:id="@+id/close_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="12dp"
            android:src="@drawable/ic_black_close" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/report_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_report_room"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:text="举报房间"
                android:textColor="@color/gray"
                android:textSize="10sp"
                android:visibility="gone"
                android:layout_marginRight="24dp"/>

            <TextView
                android:id="@+id/close_room_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_close_room"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:text="退出房间"
                android:textColor="@color/gray"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/mini_room_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:drawableTop="@drawable/ic_mini_room"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:text="最小化"
                android:textColor="@color/gray"
                android:textSize="10sp"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>
</layout>