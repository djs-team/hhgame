<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="35dp"
        app:bl_corners_radius="10dp"
        app:bl_solid_color="@color/FFFFFF"
        app:bl_stroke_dashGap="5dp"
        app:bl_stroke_dashWidth="10dp"
        app:bl_stroke_width="2dp">

        <TextView
            android:id="@+id/report_tv"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:text="未认证无法使用此功能 是否前去认证？ "
            android:textColor="@color/F333333"
            android:textSize="17dp"
            app:bl_corners_radius="20dp"
            app:bl_solid_color="@color/white"
            app:bl_stroke_dashGap="5dp"
            app:bl_stroke_dashWidth="10dp"
            app:bl_stroke_width="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="31dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/F8494FF"
                android:textSize="15dp"
                app:bl_corners_radius="25dp"
                app:bl_solid_color="@color/white"
                app:bl_stroke_color="#F2F4FF"
                app:bl_stroke_width="2dp" />


            <TextView
                android:id="@+id/confirm"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="35dp"
                android:gravity="center"
                android:text="前去认证"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:bl_corners_radius="25dp"
                app:bl_solid_color="@color/F8494FF"
                app:bl_stroke_dashGap="5dp"
                app:bl_stroke_dashWidth="10dp"
                app:bl_stroke_width="2dp" />


        </LinearLayout>


    </LinearLayout>
</layout>
