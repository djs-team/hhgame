<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_gradient_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/ali_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="17dp"
                android:drawableLeft="@drawable/ic_ali_pay"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="支付宝支付"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/ali_select_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="14dp"
                android:src="@drawable/ic_report_select"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line" />

        <RelativeLayout
            android:visibility="visible"
            android:id="@+id/wx_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="17dp"
                android:drawableLeft="@drawable/ic_wx_pay"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="微信支付"
                android:textColor="@color/black"
                android:textSize="16sp"
                />

            <ImageView
                android:id="@+id/wx_select_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="14dp"
                android:src="@drawable/ic_report_select"
                android:visibility="gone" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line" />

        <RelativeLayout
            android:id="@+id/haibei_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="17dp"
                android:drawableLeft="@drawable/ic_wx_pay"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="微信支付"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/haibei_select_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="14dp"
                android:src="@drawable/ic_report_select"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>
</layout>