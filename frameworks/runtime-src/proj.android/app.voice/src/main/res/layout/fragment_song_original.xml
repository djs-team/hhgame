<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--            <TextView-->
            <!--                android:id="@+id/tv_song_cost"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_alignParentRight="true"-->
            <!--                android:layout_centerVertical="true"-->
            <!--                android:text="ps：消耗玫瑰50朵/首"-->
            <!--                android:textColor="#ff282828"-->
            <!--                android:textSize="14sp" />-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/et_song_search"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <ImageView
                    android:id="@+id/iv_song_search"
                    android:layout_width="22dp"
                    android:layout_height="19dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="109dp"
                    android:src="@drawable/ic_search_white" />

                <EditText
                    android:id="@+id/et_song_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/iv_song_search"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="搜索你喜欢的音乐"
                    android:imeOptions="actionSearch"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="#ff818181"
                    android:textSize="16sp" />
            </RelativeLayout>
        </RelativeLayout>


        <com.deepsea.mua.stub.view.WrapRefreshLayout
            android:id="@+id/refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="9dp"
            app:srlEnableLoadMore="true">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:paddingBottom="10dp" />
        </com.deepsea.mua.stub.view.WrapRefreshLayout>

    </LinearLayout>

</layout>