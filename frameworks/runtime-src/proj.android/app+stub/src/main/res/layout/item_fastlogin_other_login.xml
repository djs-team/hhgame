<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_login_phone"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_login_other_phone" />

    <View
        android:layout_width="80dp"
        android:layout_height="1dp"
        android:layout_below="@id/iv_login_phone"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="34dp"
        android:background="#80ffffff" />

    <TextView
        android:id="@+id/tv_login_type_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_login_phone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="其他登录方式"
        android:textColor="#ffcbcbcb"
        android:textSize="11sp" />

    <View
        android:layout_width="80dp"
        android:layout_height="1dp"
        android:layout_below="@id/iv_login_phone"
        android:layout_alignParentRight="true"
        android:layout_marginTop="34dp"
        android:layout_marginRight="53dp"
        android:background="#80ffffff" />

    <ImageView
        android:id="@+id/iv_wx_login"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_below="@id/tv_login_type_desc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:src="@drawable/ic_wx" />
</RelativeLayout>
