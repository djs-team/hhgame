<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="77dp"
    android:layout_marginLeft="13dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="13dp"
    app:bl_corners_radius="12dp"
    app:bl_solid_color="@color/white">

    <TextView
        android:id="@+id/rank_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:background="@drawable/rank_number_bg"
        android:gravity="center"
        android:minWidth="19dp"
        android:minHeight="19dp"
        android:text="4"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/rank_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="8dp"
        android:src="@drawable/ic_place"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/rank_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rank_nick_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="18dp"
        android:maxWidth="150dp"
        android:singleLine="true"
        android:text="一块抹布向前一块抹布向前一块抹布向前一块抹布向前"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/rank_iv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/level_tv"
        android:layout_width="23dp"
        android:layout_height="13dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="21dp"
        android:background="@drawable/ic_level_6"
        android:gravity="center"
        android:includeFontPadding="false"
        android:paddingLeft="9dp"
        android:text="18"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/rank_nick_tv"
        app:layout_constraintLeft_toRightOf="@id/rank_nick_tv"
        app:layout_constraintTop_toTopOf="@id/rank_nick_tv" />

    <TextView
        android:id="@+id/uid_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="18dp"
        android:text="ID：121476"
        android:textColor="@color/de_gray"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@id/rank_iv"
        app:layout_constraintTop_toBottomOf="@id/rank_nick_tv" />

    <TextView
        android:id="@+id/number_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="17dp"
        android:gravity="center"
        android:text="金币6848"
        android:textColor="#FE719C"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>