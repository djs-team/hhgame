<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_sliver"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_userhead_sliver"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_place" />

            <ImageView
                android:id="@+id/iv_rank_logo_sliver"
                android:layout_width="64dp"
                android:layout_height="61dp"
                android:layout_marginLeft="7dp"
                android:src="@drawable/icon_charm_rank_silver" />

            <ImageView
                android:id="@+id/iv_rank_index_sliver"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginLeft="37dp"
                android:layout_marginTop="77dp"
                android:src="@drawable/icon_charm_rank_num_two" />

            <TextView
                android:id="@+id/tv_nickname_sliver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_rank_index_sliver"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="9dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#ff282828"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_nickname_sliver"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_flowers_sliver"
                    android:layout_width="20dp"
                    android:layout_height="26dp"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/icon_rank_blue_rose" />

                <TextView
                    android:id="@+id/tv_flower_num_sliver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:textColor="#ff1b1b1b"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tl_gold"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_userhead_gold"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_place" />

            <ImageView
                android:id="@+id/iv_rank_logo_gold"
                android:layout_width="69dp"
                android:layout_height="66dp"
                android:layout_marginLeft="7dp"
                android:src="@drawable/icon_charm_rank_gold" />

            <ImageView
                android:id="@+id/iv_rank_index_gold"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginLeft="39dp"
                android:layout_marginTop="84dp"
                android:src="@drawable/icon_charm_rank_num_one" />

            <TextView
                android:id="@+id/tv_nickname_gold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_rank_index_gold"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="9dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#ff282828"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_nickname_gold"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_flowers_gold"
                    android:layout_width="20dp"
                    android:layout_height="26dp"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/icon_rank_blue_rose" />

                <TextView
                    android:id="@+id/tv_flower_num_gold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:textColor="#ff1b1b1b"
                    android:textSize="12sp" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_copper"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="20dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_userhead_copper"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_place" />

            <ImageView
                android:id="@+id/iv_rank_logo_copper"
                android:layout_width="64dp"
                android:layout_height="61dp"
                android:layout_marginLeft="7dp"
                android:src="@drawable/icon_charm_rank_copper" />

            <ImageView
                android:id="@+id/iv_rank_index_copper"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginLeft="37dp"
                android:layout_marginTop="77dp"
                android:src="@drawable/icon_charm_rank_num_three" />

            <TextView
                android:id="@+id/tv_nickname_copper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_rank_index_copper"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="9dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="名字"
                android:textColor="#ff282828"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_nickname_copper"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView

                    android:id="@+id/iv_flowers_copper"
                    android:layout_width="20dp"
                    android:layout_height="26dp"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/icon_rank_blue_rose" />

                <TextView
                    android:id="@+id/tv_flower_num_copper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:textColor="#ff1b1b1b"
                    android:textSize="12sp" />
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>
</layout>