<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/rank_no3_iv"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:padding="2dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/rank_no2_iv"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_marginRight="24dp"
            android:padding="2dp"
            app:layout_constraintRight_toRightOf="@id/rank_no3_iv"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/rank_no1_iv"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_marginRight="24dp"
            android:padding="2dp"
            app:layout_constraintRight_toRightOf="@id/rank_no2_iv"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/rank_no1"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginBottom="2dp"
            android:src="@drawable/ic_rank_no1"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/rank_no1_iv"
            app:layout_constraintLeft_toLeftOf="@id/rank_no1_iv"
            app:layout_constraintRight_toRightOf="@id/rank_no1_iv" />

        <View
            android:id="@+id/rank_no1_mask"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:visibility="gone"
            app:bl_shape="oval"
            app:bl_stroke_color="@color/white"
            app:bl_stroke_width="2dp"
            app:layout_constraintLeft_toLeftOf="@id/rank_no1_iv"
            app:layout_constraintRight_toRightOf="@id/rank_no1_iv"
            app:layout_constraintTop_toTopOf="@id/rank_no1_iv" />
    </android.support.constraint.ConstraintLayout>
</layout>