<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/room_iv"
            android:layout_width="173dp"
            android:layout_height="173dp"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
            android:layout_width="68dp"
            android:layout_height="24dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_microstate_blindate"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingLeft="9dp"
                android:text="等待中"
                android:textColor="@color/white"
                android:textSize="11sp" />

            <ImageView
                android:id="@+id/iv_play"
                android:layout_width="14dp"
                android:layout_height="11dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="8dp"
                android:src="@drawable/icon_room_play" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_red_package"
            android:layout_width="17dp"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="11dp"
            android:src="@drawable/ic_red_package"
            android:visibility="visible"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_pc"
            android:layout_width="33dp"
            android:layout_height="15dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="7dp"
            android:src="@drawable/ic_pk"
            android:visibility="gone"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_huigou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginRight="7dp"
            android:shadowColor="#6b000000"
            android:shadowDx="0"
            android:shadowDy="3"
            android:shadowRadius="3.0"
            android:text="惠购"
            android:textColor="#FD1E1D"
            android:textSize="17sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/room_mask"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_room_mask"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/room_iv"
            app:layout_constraintLeft_toLeftOf="@id/room_iv"
            app:layout_constraintRight_toRightOf="@id/room_iv" />

        <RelativeLayout
            android:id="@+id/room_lock_rl"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="0.5"
            android:background="@drawable/black_corner_10dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/room_iv"
            app:layout_constraintLeft_toLeftOf="@id/room_iv"
            app:layout_constraintRight_toRightOf="@id/room_iv"
            app:layout_constraintTop_toTopOf="@id/room_iv">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_room_lock" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:paddingRight="19dp"
            android:layout_marginBottom="15dp"
            android:text="欢迎来到可爱的直播间"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@id/avatar_iv"
            app:layout_constraintLeft_toLeftOf="parent" />

        <RelativeLayout
            android:id="@+id/ll_desc"
            android:layout_width="173dp"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/black_trans_corner_10dp"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/avatar_iv"
            app:layout_constraintLeft_toLeftOf="parent">

            <LinearLayout
                android:id="@+id/ll_user_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/age_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:text="55岁"
                    android:textColor="#ffffffff"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/city_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"
                    android:text="北京"
                    android:textColor="#ffffffff"
                    android:textSize="11sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/nick_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_user_info"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="5dp"
                android:shadowColor="#99000000"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="3.0"
                android:text="人在旅途"
                android:textColor="#ffffffff"
                android:textSize="11sp" />


        </RelativeLayout>

        <TextView
            android:id="@+id/tag_tv"
            android:layout_width="59dp"
            android:layout_height="wrap_content"
            android:background="@drawable/room_tag_blinddate_bg"
            android:gravity="center"
            android:minHeight="20dp"
            android:text="女友"
            android:textColor="#fffafafa"
            android:textSize="11sp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/avatar_iv"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="23dp"
            android:src="@drawable/ic_place_avatar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/room_iv" />

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:singleLine="true"
            android:text="一起来唱歌吧"
            android:textColor="#ff282828"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/avatar_iv"
            app:layout_constraintLeft_toRightOf="@id/avatar_iv"
            app:layout_constraintTop_toTopOf="@id/avatar_iv" />

        <ImageView
            android:id="@+id/iv_sex"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintBottom_toBottomOf="@id/avatar_iv"
            app:layout_constraintLeft_toRightOf="@id/name_tv"
            app:layout_constraintTop_toTopOf="@id/avatar_iv" />
    </android.support.constraint.ConstraintLayout>
</layout>