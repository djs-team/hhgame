<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="259dp"
        android:background="@drawable/dialog_corner_white_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_invite_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="11dp"
            android:gravity="center"
            android:text="主持邀请您上麦，是否同意"
            android:textColor="#ff333333"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/tv_invite_info"
            android:layout_width="match_parent"
            android:layout_height="127dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_user_matchmaker"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="5dp">

                <ImageView
                    android:id="@+id/iv_matchmaker_big_avatar"
                    android:layout_width="127dp"
                    android:layout_height="127dp"
                    android:src="@drawable/ic_place_room_bg"
                    android:scaleType="fitXY"/>

                <RelativeLayout
                    android:id="@+id/tl_matchmaker"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/invite_item_corner_bg"
                    android:paddingRight="12dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp">

                    <ImageView
                        android:layout_marginLeft="2dp"
                        android:id="@+id/iv_matchmaker_small_avatar"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="6dp"
                        android:src="@drawable/ic_place_avatar"
                        />

                    <TextView
                        android:id="@+id/tv_matchmaker_name"
                        android:layout_width="wrap_content"
                        android:layout_height="14dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/iv_matchmaker_small_avatar"
                        android:textColor="#ffffffff"
                        android:textSize="10sp" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_beinvited"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/rl_user_matchmaker"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/iv_beinvited_big_avatar"
                    android:layout_width="127dp"
                    android:layout_height="127dp"
                    android:src="@drawable/ic_place_room_bg"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitXY"
                    />

                <RelativeLayout
                    android:paddingLeft="2dp"
                    android:layout_marginRight="5dp"
                    android:layout_alignBottom="@id/iv_beinvited_big_avatar"
                    android:layout_width="117dp"
                    android:layout_height="26dp"
                    android:background="@drawable/invite_item_corner_bg"
                    android:paddingRight="12dp"
                    android:layout_marginBottom="5dp"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp">

                    <ImageView

                        android:id="@+id/iv_beinvited_small_avatar"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="6dp"
                        android:src="@drawable/ic_place_avatar" />

                    <TextView
                        android:id="@+id/tv_beinvited_name"
                        android:layout_width="wrap_content"
                        android:layout_height="11dp"
                        android:layout_toRightOf="@id/iv_beinvited_small_avatar"
                        android:text="豆豆"
                        android:textColor="#ffffffff"
                        android:textSize="8sp" />

                    <ImageView
                        android:layout_toRightOf="@id/tv_beinvited_name"
                        android:id="@+id/iv_beinvited_sex"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="7dp"
                        android:src="@drawable/man" />

                    <TextView
                        android:id="@+id/tv_beinvite_introduction"
                        android:layout_width="wrap_content"
                        android:layout_height="11dp"
                        android:layout_below="@id/tv_beinvited_name"
                        android:layout_toRightOf="@id/iv_beinvited_small_avatar"
                        android:text="25岁 | 北京 | 180"
                        android:textColor="#ffffffff"
                        android:textSize="8sp" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>


        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#ffd8d8d8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_invite_disagree"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="拒绝"
                android:textColor="#ff666666"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_invite_agree"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="同意"
                android:textColor="#ffff859e"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
</layout>