<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <com.deepsea.mua.stub.view.TitleBar
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/FFFFFF"
            app:title="注册"
            app:titleColor="@color/black"
            app:titleSize="18sp"
            app:leftImgRes="@drawable/ic_back_black"/>


            <ImageView
                android:layout_marginTop="49dp"
                android:id="@+id/avatar_iv"
                android:layout_width="113dp"
                android:layout_height="113dp"
                android:layout_gravity="center"
                android:background="@drawable/icon_register_default_head"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_bar" />

        <TextView
            android:id="@+id/tv_head_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="高颜值头像更受欢迎哦"
            android:textColor="#999999"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/avatar_iv" />

        <LinearLayout
            android:id="@+id/ll_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="49dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tv_head_desc"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:text="昵称"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/nick_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:background="@color/transparent"
                android:hint="昵称2-10个字符"
                android:inputType="text"
                android:maxLength="10"
                android:textColor="#ff999999"
                android:textColorHint="#DCDCDC"
                android:textSize="13sp" />
        </LinearLayout>

        <View
            android:id="@+id/anchor"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/icon_line_regiser"
            app:layout_constraintTop_toBottomOf="@id/ll_nickname" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/age_layout"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            app:layout_constraintTop_toBottomOf="@id/anchor">

            <TextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="年龄"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/age_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginBottom="12dp"
                android:textColor="@color/black"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/age" />

            <ImageView
                android:layout_width="5dp"
                android:layout_height="9dp"
                android:src="@drawable/ic_arrow_min_black"
                app:layout_constraintBottom_toBottomOf="@id/age_tv"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/age_tv" />

            <View

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/icon_line_regiser"
                app:layout_constraintBottom_toBottomOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_marginTop="22dp"
            android:id="@+id/sex_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="86dp"
            android:layout_marginRight="91dp"
            app:layout_constraintTop_toBottomOf="@id/age_layout">

            <ImageView
                android:id="@+id/man_iv"
                android:layout_width="44dp"
                android:layout_height="70dp"
                android:src="@drawable/selector_xgg_bg"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


            <ImageView
                android:id="@+id/women_iv"
                android:layout_width="44dp"
                android:layout_height="70dp"
                android:src="@drawable/selector_xjj_bg"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:gravity="center"
            android:text="注册成功后，性别将不可更改"
            android:textColor="#ffe4212f"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sex_layout" />


        <Button
            android:id="@+id/register_btn"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="55dp"
            android:layout_marginBottom="61dp"
            android:background="@drawable/selector_login_btn_bg"
            android:enabled="false"
            app:layout_constraintBottom_toBottomOf="parent" />
    </android.support.constraint.ConstraintLayout>
</layout>