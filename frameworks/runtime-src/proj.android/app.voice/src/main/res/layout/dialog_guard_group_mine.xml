<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_radius_12dp"
        android:gravity="center_horizontal"
        android:maxHeight="420dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_place_default" />

        <LinearLayout
            android:id="@+id/ll_group_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_head"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="小包子的守护团"
                android:textColor="#ff333333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#763BE5"
                android:textSize="16sp" />
        </LinearLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cons_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_group_info"
            android:layout_gravity="bottom"
            android:layout_marginTop="69dp"
            android:paddingBottom="26dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="守护后将会获得以下特权"
                android:textColor="#ff333333"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_medal"
                android:layout_width="43dp"
                android:layout_height="52dp"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="9dp"
                android:src="@drawable/ic_group_medal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_title" />

            <TextView
                android:id="@+id/tv_medal"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="专属勋章"
                android:textColor="#ff878787"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="@id/iv_medal"
                app:layout_constraintRight_toRightOf="@id/iv_medal"
                app:layout_constraintTop_toBottomOf="@id/iv_medal" />

            <ImageView
                android:id="@+id/iv_effects"
                android:layout_width="40dp"
                android:layout_height="55dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/ic_group_effects"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="进场特效"
                android:textColor="#ff878787"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="@id/iv_effects"
                app:layout_constraintRight_toRightOf="@id/iv_effects"
                app:layout_constraintTop_toBottomOf="@id/iv_effects" />

            <ImageView
                android:id="@+id/iv_gift"
                android:layout_width="40dp"
                android:layout_height="55dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="50dp"
                android:src="@drawable/ic_group_gift"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="守护专属礼物"
                android:textColor="#ff878787"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="@id/iv_gift"
                app:layout_constraintRight_toRightOf="@id/iv_gift"
                app:layout_constraintTop_toBottomOf="@id/iv_gift" />

            <TextView
                android:id="@+id/tv_immediately_guard"
                android:layout_width="266dp"
                android:layout_height="38dp"
                android:layout_marginTop="29dp"
                android:background="@drawable/bg_friend_agree"
                android:gravity="center"
                android:text="立即守护"
                android:textColor="#ffffffff"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_medal" />
        </android.support.constraint.ConstraintLayout>

        <com.deepsea.mua.stub.view.WrapRefreshLayout
            android:id="@+id/refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_group_info"
            android:layout_marginTop="9dp"
            android:visibility="visible"
            app:srlEnableLoadMore="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="234dp"
                android:orientation="vertical">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_fans"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:overScrollMode="never" />
            </LinearLayout>
        </com.deepsea.mua.stub.view.WrapRefreshLayout>
    </RelativeLayout>


</layout>