<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="#ffffff">

        <com.deepsea.mua.stub.view.TitleBar
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            app:backgroundRes="@color/transparent"
            app:leftImgRes="@drawable/ic_back_black"
            app:title="权限"
            app:titleColor="#FF050505"
            app:titleSize="18sp" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="110dp"
            android:text="感受更多乐趣，请全部授权"
            android:textColor="#ff050505"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/rl_permission_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_desc"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="54dp"
            android:layout_marginRight="31dp">

            <ImageView
                android:id="@+id/iv_permission_camera_logo"
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:src="@drawable/icon_permission_camera" />

            <TextView
                android:id="@+id/tv_permission_camera_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="37dp"
                android:layout_marginTop="11dp"
                android:layout_toRightOf="@id/iv_permission_camera_logo"
                android:text="摄像头和麦克风"
                android:textColor="#FF050505"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_permission_camera_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_permission_camera_title"
                android:layout_marginLeft="37dp"
                android:layout_toRightOf="@id/iv_permission_camera_logo"
                android:text="这样你的朋友可以看到你，可以听到你说话"
                android:textColor="#FFA7A7A7"
                android:textSize="11sp" />

            <ImageView
                android:id="@+id/iv_permission_camera_swich"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingTop="11dp"
                android:paddingBottom="11dp"
                android:src="@drawable/selector_box" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_permission_notify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_permission_camera"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="38dp"
            android:layout_marginRight="31dp">

            <ImageView
                android:id="@+id/iv_permission_notify_logo"
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:src="@drawable/icon_permission_notifiction" />

            <TextView
                android:id="@+id/tv_permission_notify_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="37dp"
                android:layout_marginTop="11dp"
                android:layout_toRightOf="@id/iv_permission_notify_logo"
                android:text="消息通知"
                android:textColor="#FF050505"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_permission_notify_title"
                android:layout_marginLeft="37dp"
                android:layout_marginRight="23dp"
                android:layout_toRightOf="@id/iv_permission_notify_logo"
                android:text="你会知道你的朋友们什么时候在线了，打开后
你可以在设置中单独调整希望看见的好友通知"
                android:textColor="#FFA7A7A7"
                android:textSize="11sp" />

            <ImageView
                android:id="@+id/iv_permission_notify_swich"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingTop="11dp"
                android:paddingBottom="11dp"
                android:src="@drawable/selector_box" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_permission_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_permission_notify"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="38dp"
            android:layout_marginRight="31dp">

            <ImageView
                android:id="@+id/iv_permission_location_logo"
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:src="@drawable/icon_permission_location" />

            <TextView
                android:id="@+id/tv_permission_location_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="37dp"
                android:layout_marginTop="11dp"
                android:layout_toRightOf="@id/iv_permission_location_logo"
                android:text="位置权限"
                android:textColor="#FF050505"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_permission_location_title"
                android:layout_marginLeft="37dp"
                android:layout_marginRight="23dp"
                android:layout_toRightOf="@id/iv_permission_location_logo"
                android:text="你可以找到你附近的朋友们"
                android:textColor="#FFA7A7A7"
                android:textSize="11sp" />

            <ImageView
                android:id="@+id/iv_permission_location_swich"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingTop="11dp"
                android:paddingBottom="11dp"
                android:src="@drawable/selector_box" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_permission_next"
            android:layout_width="270dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="87dp"
            android:background="@drawable/icon_permission_next_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="下一步"
                android:textColor="#ff000000"
                android:textSize="12sp" />
        </RelativeLayout>
    </RelativeLayout>
</layout>