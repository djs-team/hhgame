                android:text="房间内"
                android:textColor="@color/rank_list_tab_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/current_active_tab"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="@drawable/tab_micro_manage"
                android:gravity="center"
                android:text="最近活跃"
                android:textColor="@color/rank_list_tab_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/friend_tab"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="@drawable/tab_micro_manage"
                android:gravity="center"
                android:text="好友"
                android:textColor="@color/rank_list_tab_color"
                android:textSize="14sp" />

        </LinearLayout>

        <com.deepsea.mua.core.view.NoScrollViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:overScrollMode="never"
            android:paddingTop="8dp"
            app:bl_gradient_angle="270"
            app:bl_gradient_endColor="#E7E7E7"
            app:bl_gradient_startColor="@color/white" />
