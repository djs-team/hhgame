<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <com.deepsea.mua.stub.view.TitleBar
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backgroundRes="@color/white"
            app:rightText="消费记录"
            app:rightTextSize="12sp"
            app:title="我的钱包" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/md_layout"
            android:layout_width="match_parent"
            android:layout_height="138dp"
            android:layout_below="@id/title_bar"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_wallet_recharge">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="35dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_marginTop="2dp"
                    android:id="@+id/iv_rose_logo"
                    android:layout_width="13dp"
                    android:layout_height="17dp"
                    android:src="@drawable/icon_recharge_rose" />

                <TextView
                    android:id="@+id/md_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="我的玫瑰花"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>


            <TextView
                android:id="@+id/balance_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="19dp"
                android:includeFontPadding="false"
                android:text="3600"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.deepsea.mua.stub.view.TextViewWithoutPadding
                android:id="@+id/tv_recharge_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="注：首次充值任意金额赠送一张上麦卡."
                android:textColor="#fff7d2f8"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/md_layout"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="14dp"
            android:overScrollMode="never" />

        <TextView
            android:id="@+id/tv_paytype_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recycler_view"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="12dp"
            android:text="支付方式："
            android:textColor="#ff000000"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_paytype_title"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/iv_pay_wx"
                android:layout_width="94dp"
                android:layout_height="33dp"
                android:background="@drawable/selector_charge"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18.5dp"
                    android:layout_height="18.5dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/icon_renew_wx" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:text="微信"
                    android:textColor="#ff333333"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/iv_pay_alipay"
                android:layout_width="94dp"
                android:layout_height="33dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/selector_charge"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18.5dp"
                    android:layout_height="18.5dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/icon_renew_alipay" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:text="支付宝"
                    android:textColor="#ff333333"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recharge_tv"
                android:layout_width="267dp"
                android:layout_height="38dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_friend_agree"
                android:gravity="center"
                android:text="确认充值"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tv_recharge_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="9dp"
                android:text="充值即代表同意《麻将情缘充值协议》"
                android:textColor="#ff666666"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:text="未成年人请在监护人的陪同或者许可下操作"
                android:textColor="#ff818181"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>
</layout>