        <LinearLayout
            android:id="@+id/tab_ll_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="11dp"
            android:background="@drawable/ranklist_tab_bg"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="0.5dp"
            android:visibility="visible">


            <TextView
                android:id="@+id/apply_tab"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="@drawable/tab_micro_manage"
                android:gravity="center"
                android:text="已申请"
                android:textColor="@color/rank_list_tab_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/in_room_tab"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="@drawable/tab_micro_manage"
