<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:id="@+id/fm_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <FrameLayout
            android:id="@+id/face_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:id="@+id/rl_empty_man"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_man_bg"
                android:layout_width="40dp"
                android:layout_height="58dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_micro_bg" />

            <RelativeLayout
                android:id="@+id/rl_empty_man_desc"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_below="@id/iv_man_bg"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_micro_item">

                <RelativeLayout
                    android:id="@+id/rl_man_appmicro_desc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_appmicro_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text="申请上麦"
                        android:textColor="#9F9DA8"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_man_micro_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_appmicro_desc"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="2dp"
                        android:text="20朵玫瑰"
                        android:textColor="#9F9DA8"
                        android:textSize="10sp" />
                </RelativeLayout>

            </RelativeLayout>


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/rl_empty_woman"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_women_micro_bg"
                android:layout_width="40dp"
                android:layout_height="58dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_micro_bg"
                android:visibility="visible" />


            <RelativeLayout
                android:id="@+id/rl_empty_woman_desc"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_micro_item">

                <TextView
                    android:id="@+id/tv_woman_micro_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="女嘉宾专属位"
                    android:textColor="#9F9DA8"
                    android:textSize="12sp" />
            </RelativeLayout>


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_default_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_default_empty"
                android:layout_width="56dp"
                android:layout_height="74dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_micro_bg" />

            <TextView
                android:id="@+id/tv_default_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_default_empty"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:text="申请上麦"
                android:textColor="#ffffffff"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_user_top_operate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.deepsea.mua.stub.view.WithBackgroundTextView
                android:id="@+id/label_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="14.5dp"
                android:paddingTop="1dp"
                android:paddingRight="14.5dp"
                android:paddingBottom="1dp"
                android:text="嘉宾"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="gone"
                app:radius="5dp"
                app:withBackgroundColor="#FF940686" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/iv_rank_users"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"/>

            <RelativeLayout
                android:id="@+id/rl_rose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/icon_flowers" />

                <TextView
                    android:id="@+id/tv_rose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="15dp"
                    android:textColor="#ff000000"
                    android:textSize="6sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rl_operate_applause"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/oval_red_bg"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/icon_room_applause" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/iv_give_rose"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/icon_give_one_rose" />

                <RelativeLayout
                    android:id="@+id/rl_operate_sendgift"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginRight="4dp"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/icon_gift" />
                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>

        <!--普通用户-->
        <RelativeLayout
            android:id="@+id/user_layout"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="5dp"
            android:visibility="visible">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.6"
                app:bl_corners_radius="18dp"
                app:bl_solid_color="#666666" />

            <ImageView
                android:id="@+id/avatar_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="6dp" />

            <TextView
                android:id="@+id/nick_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/avatar_iv"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/info_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nick_tv"
                android:layout_toRightOf="@id/avatar_iv"
                android:textColor="@color/white"
                android:textSize="10sp" />


            <TextView
                android:id="@+id/addfriend_commonuser_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:background="@drawable/room_add_friend_bg"
                android:paddingLeft="6dp"
                android:paddingTop="4dp"
                android:paddingRight="6dp"
                android:paddingBottom="4dp"
                android:text="加好友"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_micro_operate"
            android:layout_width="19dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="12dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_down_mp"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:background="@drawable/bg_room_black_radius">

                <com.deepsea.mua.stub.view.WithBackgroundTextView
                    android:layout_width="9dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="下麦"
                    android:textColor="#ffffffff"
                    android:textSize="9sp" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_close_mp"
                android:layout_width="12dp"
                android:layout_height="18dp"
                android:layout_gravity="right"
                android:layout_marginTop="7dp"
                android:layout_marginRight="2dp"
                android:src="@drawable/room_close_mp" />

        </LinearLayout>

        <!--红娘-->
        <RelativeLayout
            android:id="@+id/match_maker_layout"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="5dp"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.6"
                app:bl_corners_radius="12dp"
                app:bl_solid_color="#666666" />

            <ImageView
                android:id="@+id/match_avatar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="6dp" />

            <TextView
                android:id="@+id/match_maker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/match_avatar"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_user_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/match_maker"
                android:layout_toRightOf="@id/match_avatar"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_tag"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="" />

            <TextView
                android:id="@+id/addfriend_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:background="@drawable/room_add_friend_bg"
                android:paddingLeft="6dp"
                android:paddingTop="4dp"
                android:paddingRight="6dp"
                android:paddingBottom="4dp"
                android:text="加好友"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </RelativeLayout>
    </FrameLayout>
</layout>